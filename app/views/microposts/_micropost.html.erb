<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.size.micropost), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.display_image if micropost.image.attached? %>
  </span>
  <span class="timestamp">
    <%= raw t :micropost_creat_at, anchor: time_ago_in_words(micropost.created_at) %>
    <% if current_user? micropost.user %>
      | <%= link_to t("delete"), micropost, method: :delete, data: {confirm: t("delete_sure")} %>
    <% end %>
  </span>
</li>
