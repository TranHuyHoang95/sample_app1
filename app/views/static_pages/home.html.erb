<% provide(:title, t("home") ) %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1><%= t "welcome_home" %></h1>
    <h2>
      <%= raw t :link_home, anchor: link_to("Ruby on Rails ", "https://www.railstutorial.org/") %>
    </h2>	
    <%= link_to t("sign_up"), signup_path, class: "btn btn-lg btn-primary" %>
  </div>
  <%= link_to image_tag("rails.png", alt: "Rails logo", width: "200px"),"https://rubyonrails.org/" %>
<% end %>
